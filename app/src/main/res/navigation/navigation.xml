<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment2">

    <fragment
        android:id="@+id/titleFragment2"
        android:name="com.example.androidproject.TitleFragment"
        android:label="TitleFragment" >
        <action
            android:id="@+id/action_titleFragment2_to_messagesFragment"
            app:destination="@id/messagesFragment" />
        <action
            android:id="@+id/action_titleFragment2_to_notificationFragment"
            app:destination="@id/notificationFragment" />
        <action
            android:id="@+id/action_titleFragment2_to_userProfile"
            app:destination="@id/userProfile" />
    </fragment>

    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.androidproject.MessagesFragment"
        android:label="fragment_messages"
        tools:layout="@layout/fragment_messages" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.androidproject.NotificationFragment"
        android:label="NotificationFragment">
        <action
            android:id="@+id/action_notificationFragment_to_userProfile"
            app:destination="@id/userProfile" />
    </fragment>

    <fragment
        android:id="@+id/userProfile"
        android:name="com.example.androidproject.userProfileSettingsFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" >
        <action
            android:id="@+id/action_userProfile_to_notificationFragment"
            app:destination="@id/notificationFragment" />
        <action
            android:id="@+id/action_userProfile_to_titleFragment2"
            app:destination="@id/titleFragment2" />
    </fragment>
</navigation>